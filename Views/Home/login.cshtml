@model FittRaho.Models.User
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Fitt | Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="~/Content/styles.css" />-->
    <!-- Animation -->
    <!-- Font Awesome -->
    <!--Slider CSS-->
    <link rel="stylesheet" type="text/css" href="~/Content/slider.css">
    <!--Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/Content/custom.css">

    <script src="~/Scripts/jquery-2.2.3.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jssor.js" type="text/javascript"></script>
    <script src="~/Scripts/jssor.slider.js" type="text/javascript"></script>
    <script src="~/Scripts/slider.js" type="text/javascript"></script>    <style>
        .color {
            background-color: #93d783;
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
        }

        .btn {
            background: #63d934;
            background-image: -webkit-linear-gradient(top, #63d934, #b8632b);
            background-image: -moz-linear-gradient(top, #63d934, #b8632b);
            background-image: -ms-linear-gradient(top, #63d934, #b8632b);
            background-image: -o-linear-gradient(top, #63d934, #b8632b);
            background-image: linear-gradient(to bottom, #63d934, #b8632b);
            -webkit-border-radius: 11;
            -moz-border-radius: 11;
            text-shadow: 1px 1px 28px #666666;
            -webkit-box-shadow: 0px 1px 3px #d16bd1;
            -moz-box-shadow: 0px 1px 3px #d16bd1;
            box-shadow: 0px 1px 3px #d16bd1;
            color: #ffffff;
            text-decoration: none;
        }

            .btn:hover {
                background: #3cfa88;
                text-decoration: none;
            }
    </style>
    <script>
        function check() {
            
            if (Session["logName"] != null) {

                window.location.href = "/Home/Index"
            }
            var log = Session["logName"];
            alert(log);
        }

    </script>
    

    
</head>
<body onload="check()">
    <br /><br /><br /><br />
    <h2 style="color:purple">Log In To Your Account !!</h2>
    <br />
    <div class="container">
        <form action="/Home/logged" method="post">
            <div class="col-lg-2 ">
                <label>UserName</label>
                @Html.TextBox("username", null, new { @class = "form-control" })
                <label>Password</label><br />
                @Html.Password("password", null, new { @class = "form-control" })<br />

                <input type="submit" value="Login" class="btn" />
            </div>
        </form>
    </div>
    <br /><br /><br />
</body>
</html>
