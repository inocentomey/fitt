    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" id="nav-toggle" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                <a style="margin-bottom:10px" href="~/Home/index" class="navbar-brand scroll-top logo animated bounceInLeft rollIn"><b><img u="image" height="40px" width="45px" src="~/images/logo1.jpg" /></b></a>
            </div>
            <div id="main-nav" class="collapse navbar-collapse">
                <ul class="nav navbar-nav" id="mainNav">
                    <li>@Html.ActionLink("Home", "index", "Home")</li>
                    <li>@Html.ActionLink("Gallery", "gallery", "Home")</li>
                    <li>@Html.ActionLink("About Us", "about", "Home")</li>
                    <li>@Html.ActionLink("Contact Us", "contact", "Home")</li>
                    @if (Session["adminName"] != null)
                    { 
                        <li>@Html.ActionLink("Admin", "AdminView", "Admin")</li>
                    }
                    <li>@Html.ActionLink("Exercises", "Biscep", "Home")</li>
                    @if (Session["logName"] != null)
                    {
                        <li>@Html.ActionLink("Schedule", "schedule", "Home")</li>
                    }
                </ul>
                <div class="col-lg-4"></div>
                <ul class="nav navbar-nav" id="mainNav">
                    @if (Session["logName"] != null || Session["adminName"] != null)
                    {
                        if (Session["adminName"] != null)
                        {
                            <li>@Html.ActionLink(Session["adminName"].ToString(), "AdminView", "Admin")</li>
                            <li>@Html.ActionLink("SignOut", "SignOut", "Home")</li>
                        }
                        else { 
                        <li>@Html.ActionLink(Session["logName"].ToString(), "Schedule", "Home")</li>
                        <li>@Html.ActionLink("SignOut", "SignOut", "Home")</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "login", "Home")</li>
                        <li>@Html.ActionLink("SignUp", "signUp", "Home")</li>
                    }

                    
                </ul>

            </div>

        </div>
    </div>
